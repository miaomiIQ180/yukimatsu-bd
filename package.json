{
  "name": "vue3-ts-base",
  "type": "module",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@9.13.2",
  "description": "A nice template for starting a vue-ts project ",
  "author": "Oliver Mak",
  "license": "MIT",
  "homepage": "https://github.com/oliver139/vue3-ts-base",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliver139/vue3-ts-base"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "prepare": "simple-git-hooks",
    "build": "run-p \"build-only {@}\" type-check --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --cache --fix",
    "lint:check": "eslint . --cache",
    "lint:inspect": "eslint --inspect-config",
    "release": "bumpp"
  },
  "dependencies": {
    "@vueuse/core": "^11.3.0",
    "pinia": "^2.2.6",
    "vue": "^3.5.13",
    "vue-gtag": "^2.0.1",
    "vue-i18n": "^10.0.4",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@iconify/vue": "^4.1.2",
    "@oliver139/eslint-config": "^1.1.3",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vue/tsconfig": "^0.6.0",
    "bumpp": "^9.8.1",
    "eslint": "^9.15.0",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^7.0.1",
    "sass": "^1.81.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.7.2",
    "unplugin-auto-import": "^0.18.5",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.11",
    "vite-plugin-vue-devtools": "^7.6.4",
    "vue-tsc": "^2.1.10"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --cache --fix"
  },
  "browserslist": [
    ">0.3%",
    "defaults"
  ]
}
